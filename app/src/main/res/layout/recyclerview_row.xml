<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/recyclerviewProductPrice"
        android:layout_width="155dp"
        android:layout_height="42dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="16dp"
        android:text="sa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/recyclerviewProductName"
        app:layout_constraintStart_toEndOf="@+id/recyclerviewImageView"
        app:layout_constraintTop_toBottomOf="@+id/recyclerviewProductName" />

    <ImageView
        android:id="@+id/recyclerviewImageView"
        android:layout_width="110dp"
        android:layout_height="116dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerviewProductPrice"
        app:layout_constraintEnd_toStartOf="@+id/recyclerviewProductName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recyclerviewProductPrice"
        app:layout_constraintVertical_bias="0.571"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/recyclerviewProductName"
        android:layout_width="252dp"
        android:layout_height="62dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="6dp"
        android:text="sa"
        app:layout_constraintBottom_toTopOf="@+id/recyclerviewProductPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recyclerviewImageView"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>